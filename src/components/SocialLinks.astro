---
const socialLinks = [
    {
        href: "https://www.linkedin.com/in/emilie-allard/",
        label: "LinkedIn",
        svg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2a2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6M2 9h4v12H2z"></path><circle cx="4" cy="4" r="2"></circle></g></svg>`,
    },
    {
        href: "https://www.instagram.com/minederien.facilitation",
        label: "Instagram",
        svg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8A4 4 0 0 1 16 11.37m1.5-4.87h.01"></path></g></svg>`,
    },
];
---

<ul class="social-links">
    {
        socialLinks.map((link) => (
            <li>
                <a
                    class="social-link"
                    href={link.href}
                    aria-label={link.label}
                    set:html={link.svg}
                    target="_blank"
                    rel="noopener noreferrer"
                />
            </li>
        ))
    }
</ul>

<style>
    .social-links {
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .social-link {
        display: block;
        transition: color var(--transition);
    }

    .social-link:hover {
        color: var(--color-secondary);
    }

    @media (max-width: calc(58em - 1px)) {
        .social-links {
            padding: 2rem;
            border-top: 1px solid;
            gap: 2rem;
        }
    }
</style>
