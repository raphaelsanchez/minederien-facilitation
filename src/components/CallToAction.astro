<style>
    aside {
        padding-block: clamp(2rem, 8vw, 4rem);
        background-color: var(--color-secondary-medium);
    }
    .container {
        display: flex;
        align-items: center;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    h2 {
        margin: 0;
        max-width: 30rem;
        text-wrap: balance;
        font-weight: bold;
        color: var(--color-primary);
        line-height: 1;
    }

    .button svg {
        margin-block-start: -0.5rem;
    }

    .social-links {
        list-style: none;
        padding: 0;
    }
    .social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        transition: color var(--transition);
    }
</style>
